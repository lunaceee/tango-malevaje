---
import { fetchIssuedTickets } from "../api/tickets";
import { loadQuery } from "../../sanity/lib/load-query";
import { homePageQuery } from "../../sanity/lib/queries";
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import ReservationButton from "../components/ReservationButton.astro";

const issuedTickets = await fetchIssuedTickets();

const numberOfTickets = issuedTickets.data.length;
const TOTAL_SEATS = 20;

interface HomePageQuery {
  highlightEvent: {
    title: string;
    eventDate: string;
    location: string;
    image?: string;
    ticketUrl: string;
  };
  cardsSection: {
    title: string;
    cards: {
      title: string;
      description: string;
      image?: string;
      link: { slug: string };
    }[];
  };
}

const { data: homePage } = (await loadQuery({ query: homePageQuery })) as {
  data: HomePageQuery;
};
---

<Layout>
  <Navigation />
  <!-- Highlight Event -->
  <section>
    <div
      class="w-full h-screen flex flex-col lg:flex-row items-center justify-center"
    >
      <!-- Image -->
      <div class="w-auto lg:h-192">
        {
          homePage.highlightEvent.image && (
            <img
              src={homePage.highlightEvent.image}
              alt={homePage.highlightEvent.title}
              class="w-full h-full object-cover"
            />
          )
        }
      </div>
      <!-- Event Details -->
      <div
        class="w-full lg:w-1/2 p-8 flex flex-col items-center lg:items-start text-center lg:text-left lg:ml-4"
      >
        <h1 class="text-3xl lg:text-5xl font-bold">
          {homePage.highlightEvent.title}
        </h1>
        <p class="text-lg lg:text-xl text-gray-600 mt-4">
          Date: {
            new Date(homePage.highlightEvent.eventDate).toLocaleDateString()
          }
        </p>
        <p class="text-lg lg:text-xl text-gray-600 mt-2">
          Location: {homePage.highlightEvent.location}
        </p>

        <ReservationButton url={homePage.highlightEvent.ticketUrl} size="lg" />
      </div>
    </div>
  </section>

  <!-- Cards Section -->
  <section>
    <div class="py-24 sm:py-32">
      <div class="mx-auto px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h2
            class="text-balance text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl"
          >
            Past Events
          </h2>
          <p class="mt-2 text-lg/8 text-gray-600">
            Learn how to grow your business with our expert advice.
          </p>
        </div>
        <div
          class="mx-auto mt-16 grid max-w-256 auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none"
        >
          {
            homePage.cardsSection.cards.map((card) => (
              <article
                key={card.title}
                class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80"
              >
                <img
                  alt={card.title}
                  src={card.image}
                  class="absolute inset-0 -z-10 size-full object-cover"
                />
                <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40" />
                <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10" />

                <h3 class="mt-3 text-lg/6 font-semibold text-white">
                  <a href={card.link.slug} class="hover:underline">
                    <span class="absolute inset-0" />
                    {card.title}
                  </a>
                </h3>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</Layout>
