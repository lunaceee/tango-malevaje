---
import { fetchIssuedTickets } from "../api/tickets";
import { loadQuery } from "../../sanity/lib/load-query";
import { homePageQuery } from "../../sanity/lib/queries";
import Layout from "../layouts/Layout.astro";
import ReservationButton from "../components/ReservationButton.astro";

const issuedTickets = await fetchIssuedTickets();

const numberOfTickets = issuedTickets.data.length;
const TOTAL_SEATS = 20;

interface HomePageQuery {
  highlightEvent: {
    title: string;
    eventDate: string;
    location: string;
    image?: string;
    ticketUrl: string;
  };
  linkToGallery: {
    title: string;
    image: string;
  };
}

const { data: homePage } = (await loadQuery({ query: homePageQuery })) as {
  data: HomePageQuery;
};
---

<Layout>
  <!-- Highlight Event -->
  <section>
    <div
      class="w-full px-8 pt-10 lg:h-screen lg:pt-0 flex flex-col lg:flex-row justify-center items-center bg-violet-100"
    >
      <!-- Image -->
      <div class="w-auto lg:h-176">
        {
          homePage.highlightEvent.image && (
            <img
              src={homePage.highlightEvent.image}
              alt={homePage.highlightEvent.title}
              class="w-full h-full object-cover"
            />
          )
        }
      </div>
      <!-- Event Details -->
      <div
        class="w-full lg:w-128 flex flex-col items-center lg:items-start text-center lg:text-left lg:ml-20"
      >
        <h2 class="text-3xl lg:text-5xl font-bold">
          {homePage.highlightEvent.title}
        </h2>
        <p class="text-lg lg:text-xl mt-4">
          Date: {
            new Date(homePage.highlightEvent.eventDate).toLocaleDateString()
          }
        </p>
        <p class="text-lg lg:text-xl mt-2">
          Location: {homePage.highlightEvent.location}
        </p>

        <ReservationButton url={homePage.highlightEvent.ticketUrl} size="lg" />
      </div>
    </div>
  </section>

  <!-- Plan for your visit Section -->
  <section>
    <div class="w-full p-10 lg:items-center">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl lg:text-5xl font-bold">
          {homePage.planForVisit.title}
        </h2>
        <p class="mt-2 text-lg/8">
          Learn how to grow your business with our expert advice.
        </p>
      </div>
      <div
        class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:max-w-256"
      >
        <article
          class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80"
        >
          <img
            alt=""
            src={homePage.planForVisit.images[0].image}
            class="absolute inset-0 -z-10 size-full object-cover"
          />
          <div
            class'="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"
          >
          </div>
          <div
            class'="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"
          >
          </div>

          <h3 class="mt-3 text-lg/6 font-semibold text-white">
            <a href={homePage.linkToGallery.slug} class="group">
              <span class="absolute inset-0"></span>
              Gallery
            </a>
          </h3>
        </article>
      </div>
    </div>
  </section>

  <!-- Link To Gallery Section -->
  <section>
    <div class="w-full p-10 lg:items-center lg:h-screen">
      <div class="mx-auto max-w-2xl text-center">
        <h2
          class="text-balance text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl"
        >
          {homePage.linkToGallery.title}
        </h2>
        <p class="mt-2 text-lg/8">
          Learn how to grow your business with our expert advice.
        </p>
      </div>
      <div
        class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:max-w-256"
      >
        <article
          class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80"
        >
          <img
            alt=""
            src={homePage.linkToGallery.pictures[0].url}
            class="absolute inset-0 -z-10 size-full object-cover"
          />
          <div
            class'="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"
          >
          </div>
          <div
            class'="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"
          >
          </div>

          <h3 class="mt-3 text-lg/6 font-semibold text-white">
            <a href={homePage.linkToGallery.slug} class="group">
              <span class="absolute inset-0"></span>
              Gallery
            </a>
          </h3>
        </article>
      </div>
    </div>
  </section>
</Layout>
