---
import Layout from "../layouts/Layout.astro";
import PortableText from "../components/PortableText.astro";
import { loadQuery } from "../../sanity/lib/load-query";
import { venuePageQuery } from "../../sanity/lib/queries";

type VenuePageProps = {
  title: string;
  images: {
    image: string;
    altText: string;
  }[];
  editor: string;
};

const { data: venue } = await loadQuery<VenuePageProps>({
  query: venuePageQuery,
});
---

<Layout>
  <section>
    <div class="container mx-auto p-4">
      <h1 class="p-4 lg:p-16">{venue.title}</h1>
      <div class="max-w-256 mx-auto">
        <PortableText portableText={venue.editor} />
      </div>
      <ul class="flex flex-wrap gap-8 my-20">
        {
          venue.images.map((item) => (
            <li class="w-full lg:w-176 rounded-lg overflow-hidden shadow-lg">
              <img
                src={item.image}
                alt={item.altText}
                class="w-full h-full object-fill"
              />
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
