<svg
  width="400"
  height="200"
  viewBox="0 0 400 200"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Decorative Line -->
  <path
    d="M 10,100 L 80,100"
    stroke="black"
    stroke-width="2"
    stroke-linecap="round"
    stroke-dasharray="70"
    stroke-dashoffset="70"
  >
    <animate
      attributeName="stroke-dashoffset"
      from="70"
      to="0"
      dur="2s"
      fill="freeze"></animate>
  </path>

  <!-- Ornamental Left Side -->
  <path
    d="M 80,100 C 100,80 120,80 140,100 S 180,140 200,100"
    stroke="black"
    stroke-width="2"
    fill="none"
    stroke-dasharray="150"
    stroke-dashoffset="150"
  >
    <animate
      attributeName="stroke-dashoffset"
      from="150"
      to="0"
      dur="2s"
      fill="freeze"></animate>
  </path>

  <!-- Ornamental Right Side (Mirrored) -->
  <path
    d="M 320,100 C 300,80 280,80 260,100 S 220,140 200,100"
    stroke="black"
    stroke-width="2"
    fill="none"
    stroke-dasharray="150"
    stroke-dashoffset="150"
  >
    <animate
      attributeName="stroke-dashoffset"
      from="150"
      to="0"
      dur="2s"
      fill="freeze"></animate>
  </path>

  <!-- Decorative Line Right -->
  <path
    d="M 320,100 L 390,100"
    stroke="black"
    stroke-width="2"
    stroke-linecap="round"
    stroke-dasharray="70"
    stroke-dashoffset="70"
  >
    <animate
      attributeName="stroke-dashoffset"
      from="70"
      to="0"
      dur="2s"
      fill="freeze"></animate>
  </path>
</svg>
