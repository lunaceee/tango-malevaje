---
const {
  type = "button",
  variant = "primary",
  size = "md",
  onclick,
  disabled = false,
} = Astro.props;

const variants = {
  primary: "bg-blue-600 hover:bg-blue-700 text-white",
  secondary: "bg-gray-600 hover:bg-gray-700 text-white",
  outline:
    "border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white",
  danger: "bg-red-600 hover:bg-red-700 text-white",
};

const sizes = {
  sm: "px-3 py-1 text-sm",
  md: "px-4 py-2 text-base",
  lg: "px-6 py-3 text-lg",
};
---

<button
  type={type}
  class={`rounded-lg font-semibold transition duration-200 ease-in-out focus:outline-none focus:ring focus:ring-opacity-50 ${variants[variant] || variants.primary} ${sizes[size] || sizes.md}`}
  onclick={onclick}
  disabled={disabled}
>
  <slot />
</button>
